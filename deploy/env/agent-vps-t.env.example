APP_ENV=prod
LOG_LEVEL=INFO

AGENT_HOST=0.0.0.0
AGENT_PORT=8070
AGENT_ROLE=VPS_T
AGENT_AUTH_TOKEN=CHANGE_ME_AGENT_SHARED_TOKEN
AGENT_DATA_ROOT=/var/lib/tracegate-agent
AGENT_DRY_RUN=false
AGENT_RUNTIME_MODE=systemd
AGENT_RELOAD_XRAY_CMD=systemctl reload xray
AGENT_RELOAD_HYSTERIA_CMD=systemctl reload hysteria-server
AGENT_RELOAD_WG_CMD=wg syncconf wg0 /etc/wireguard/wg0.conf

AGENT_STATS_URL=http://127.0.0.1:9999/traffic
AGENT_STATS_SECRET=CHANGE_ME_HYSTERIA_STATS_SECRET
AGENT_WG_INTERFACE=wg0
AGENT_WG_EXPECTED_PORT=51820

# Optional mTLS for incoming /v1/events
AGENT_SERVER_CERT=
AGENT_SERVER_KEY=
AGENT_CA_CERT=
